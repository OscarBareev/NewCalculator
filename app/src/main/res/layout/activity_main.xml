<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    <TextView
        android:id="@+id/resultField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end|center"
        android:padding="8dp"
        android:text="@string/zero"
        android:textColor="#ffffff"
        android:textSize="68sp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16">

        <ImageView
            android:id="@+id/backgroundImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <!-- Обычный калькулятор-->

        <LinearLayout
            android:id="@+id/simpleCalculator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">


            <LinearLayout
                android:id="@+id/firstLine"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/c"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/plusMinusBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/plusMinus"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/percentBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/percent"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/divideBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#f57808"
                    android:text="@string/divide"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondLine"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/sevenBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/seven"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/eightBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/eight"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/nineBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/nine"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/xBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#f57808"
                    android:text="@string/x"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdLine"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fourBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/four"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/fiveBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/five"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/sixBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/six"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/minusBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#f57808"
                    android:text="@string/minus"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/forthLine"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:textSize="24sp">

                <Button
                    android:id="@+id/oneBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/one"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/twoBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/two"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/threeBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/three"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/plusBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#f57808"
                    android:text="@string/plus"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fifthLine"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/zeroBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:layout_weight="2"
                    android:background="#cacbcf"
                    android:text="@string/zero"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/dotBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/dot"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/resultBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="#f57808"
                    android:text="@string/result"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>


        <!--Инженерный калькулятор-->


        <LinearLayout
            android:id="@+id/engineeringCalculator"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/firstLineNew"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/sinBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/sin"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/cBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/c"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/plusMinusBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/plusMinus"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/percentBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/percent"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/divideBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#f57808"
                    android:text="@string/divide"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondLineNew"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cosBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/cos"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/sevenBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/seven"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/eightBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/eight"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/nineBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/nine"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/xBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#f57808"
                    android:text="@string/x"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdLineNew"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/tngBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/tng"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/fourBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/four"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/fiveBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/five"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/sixBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/six"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/minusBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#f57808"
                    android:text="@string/minus"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/forthLineNew"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:textSize="24sp">

                <Button
                    android:id="@+id/ctanBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/ctan"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/oneBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/one"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/twoBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/two"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/threeBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/three"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/plusBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#f57808"
                    android:text="@string/plus"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fifthLineNew"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/logBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/log"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/zeroBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:background="#cacbcf"
                    android:text="@string/zero"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/dotBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#cacbcf"
                    android:text="@string/dot"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/resultBtnNew"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#f57808"
                    android:text="@string/result"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


    <Button
        android:id="@+id/changeBtn"
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="@string/changeText" />

</LinearLayout>